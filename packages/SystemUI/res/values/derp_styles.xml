<resources>

    <style name="TextAppearance.QSEdit.CustomHeaders"
        parent="@*android:style/TextAppearance.DeviceDefault.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@*android:color/accent_device_default_light</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- NavBar Pixel Animation -->
    <style name="DotStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:alpha">@null</item>
    </style>

    <style name="TextAppearance.StatusBar.Expanded.Weather">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily">@*android:string/config_bodyFontFamily</item>
    </style>

    <style name="TextAppearance.StatusBar.Expanded.Weather.Detailed">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily">@*android:string/config_bodyFontFamily</item>
    </style>

</resources>
